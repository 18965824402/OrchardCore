@model MenuTreeNodeViewModel

@{

}

<h5>@T["Lists"]</h5>

<fieldset class="form-group">
    <div class="row">
        <div class="col-sm">
            <span class="hint">@T["The content types with a menu part to add to the content tree."]</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <ul class="list-group">
                @foreach (var menu in Model.AvailableMenuContentItems)
                {
                    var name = menu.Value;
                    var checkd = Model.Selected?.Contains(menu.Key);

                    <li class="list-group-item">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="@Html.NameFor(m => m.Selected)" value="@menu.Key" checked="@checkd">
                                @menu.Value dd
                            </label>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</fieldset>
