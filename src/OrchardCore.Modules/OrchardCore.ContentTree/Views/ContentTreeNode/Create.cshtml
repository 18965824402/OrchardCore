@model EditContentTreePresetTreeNodeViewModel

<h1>@RenderTitleSegments(T["Create Tree Node"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Create" method="post">
    @await DisplayAsync(Model.Editor)

    <input type="hidden" asp-for="ContentTreePresetId" />
    <input type="hidden" asp-for="TreeNodeId" />
    <input type="hidden" asp-for="TreeNodeType" />

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Create"]</button>
            <a class="btn btn-secondary" asp-route-action="Display" asp-route-controller="Admin" asp-route-id="@Model.ContentTreePresetId">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>