@model EditContentTreePresetTreeNodeViewModel

<h3>@RenderTitleSegments(T["Edit {0}", Model.MenuItem.ItemType])</h3>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Edit" method="post">
    @await DisplayAsync(Model.Editor)

    <input type="hidden" asp-for="ContentTreePresetId" />
    <input type="hidden" asp-for="TreeNodeId" />
    <input type="hidden" asp-for="TreeNodeType" />

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>

            <a asp-action="Delete"
               asp-controller="ContentTreeNode"
               asp-route-id="@Model.ContentTreePresetId"
               asp-route-treeNodeId="@Model.TreeNodeId"
               class="btn btn-danger"
               itemprop="RemoveUrl UnsafeUrl">@T["Delete"]</a>

            <a class="btn btn-secondary"
               asp-route-action="Display"
               asp-route-controller="Admin"
               asp-route-id="@Model.ContentTreePresetId">@T["Cancel"]</a>

        </div>
    </fieldset>
</form>